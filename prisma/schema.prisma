generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Uncomment the line below if using Supabase
  // directUrl = env("DIRECT_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  password    String
  role        String   @default("customer") // "customer" or "admin"
  phone       String?
  phoneNumber String?  @unique // Full phone number with country code (e.g., +919843883829)
  firebaseUid String?  @unique // Firebase user ID for phone auth users
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders    Order[]
  cartItems CartItem[]
  coupon    Coupon?    @relation(fields: [couponId], references: [id])
  couponId  String?
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  image       String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products Product[]
  coupon   Coupon?   @relation(fields: [couponId], references: [id])
  couponId String?
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float // Base price for default weight
  image       String // Primary image (for backward compatibility)
  images      String? // JSON array of additional images: ["url1", "url2", "url3"]
  stock       Int      @default(0)
  featured    Boolean  @default(false)
  isActive    Boolean  @default(true)
  categoryId  String
  weights     String? // JSON: [{weight:"250g",price:349},{weight:"500g",price:649},{weight:"1kg",price:1199}]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  category   Category    @relation(fields: [categoryId], references: [id])
  orderItems OrderItem[]
  cartItems  CartItem[]
  coupon     Coupon?     @relation(fields: [couponId], references: [id])
  couponId   String?
}

model Order {
  id          String   @id @default(cuid())
  orderNumber String   @unique
  status      String   @default("pending") // pending, confirmed, preparing, ready, delivered, cancelled
  total       Float
  userId      String?
  phone       String
  email       String?
  name        String?
  address     String?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user           User?            @relation(fields: [userId], references: [id])
  store          Store?           @relation(fields: [storeId], references: [id])
  items          OrderItem[]
  statusHistory  OrderStatusLog[]
  storeId        String?
  couponId       String?
  coupon         Coupon?          @relation(fields: [couponId], references: [id])
  couponCode     String?
  discountAmount Float            @default(0)
}

model Coupon {
  id             String   @id @default(cuid())
  code           String   @unique
  discountType   String // "percentage" or "fixed"
  discountValue  Float
  minCartValue   Float    @default(0)
  maxDiscountCap Float?
  startDate      DateTime
  expiryDate     DateTime
  usageLimit     Int? // Total number of times this coupon can be used
  userLimit      Int      @default(1) // Number of times a single user can use it
  usedCount      Int      @default(0)
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  applicableProducts   Product[]
  applicableCategories Category[]
  eligibleUsers        User[]
  orders               Order[]
}

model OrderStatusLog {
  id        String   @id @default(cuid())
  orderId   String
  status    String // pending, confirmed, preparing, ready, delivered, cancelled
  notes     String?
  createdAt DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float
  weight    String? // Selected weight (e.g., "500g")
  createdAt DateTime @default(now())

  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String?
  sessionId String? // For guest users
  productId String
  quantity  Int
  weight    String? // Selected weight (e.g., "500g")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User?   @relation(fields: [userId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@unique([userId, productId, weight])
}

model Store {
  id               String            @id @default(cuid())
  name             String
  address          String
  phone            String?
  email            String?
  isActive         Boolean           @default(true)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  orders           Order[]
  customCakeOrders CustomCakeOrder[]
}

model CustomCakeOrder {
  id            String    @id @default(cuid())
  customerName  String
  phone         String
  email         String?
  cakeImage     String // Path to uploaded image
  description   String?
  status        String    @default("pending") // pending, quoted, confirmed, completed, cancelled
  preferredDate DateTime?
  storeId       String
  store         Store     @relation(fields: [storeId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Unit {
  id           String   @id @default(cuid())
  name         String   @unique
  abbreviation String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Settings {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String // JSON string for complex values
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Banner {
  id           String   @id @default(cuid())
  title        String
  desktopImage String // Desktop banner image path (1920x768)
  mobileImage  String? // Mobile banner image path (768x512)
  link         String? // Optional link when banner is clicked
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0) // Order in which banners appear
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model UserProfile {
  id          String   @id @default(cuid())
  firebaseUid String   @unique // Firebase user ID
  phoneNumber String   @unique // Phone number with country code
  phone       String? // Phone number without country code
  name        String?
  email       String?
  address     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
